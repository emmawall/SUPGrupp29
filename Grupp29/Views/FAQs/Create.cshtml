@model Grupp29.Models.FAQ

@{
    ViewBag.Title = "Create";
}

<link href="~/Css/StyleManage.css" rel="stylesheet" />

<h2>Vanliga frågor / FAQ</h2>
<div class="row">
    <div class="col-md-4">
        <br />
        <h4><b>Hur registrerar jag mig?</b></h4>
        <p>På startsidan kan du klicka på "Registrera" och följa instuktionerna för att skapa ett konto.</p>
        <br />

        <h4><b>Hur hittar jag växterna som finns på hemsidan?</b></h4>
        <p>Registrerade användare kan söka på en växt i sökfältet eller genom att sortera dem efter kategori under "Hitta växter".</p>

        <br />
        <h4><b>Hur byter jag profilbild?</b></h4>
        <p>Du kan byta din profilbild genom att gå in på "Redigera uppgifter" och sedan "Ändra uppgifter och där välja en ny profilbild."</p>


    </div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-7">

            <br />
            <h4><b>Hittade du inte svaret på din fråga?</b></h4>
            <p>Skriv din fråga här så svarar vi så fort vi kan!</p>

            <div class="form-horizontal">

               
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Sender, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Sender, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Sender, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Message, 10, 60, htmlAttributes: new
                                              {
                                                  style = "max-width: 600px; height:200px;" })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Skicka" class="btn btn-default" />

                    </div>
                </div>
            </div>
        </div>
        </div>
            }

    </div>

            

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

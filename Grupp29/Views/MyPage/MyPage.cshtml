@{
    ViewBag.Title = "Dina inlägg";
}
@using Grupp29.Controllers
@using Grupp29.Models
<h2>Mina listor</h2>
<br />

@{
    RoomListsController roomListsController = new RoomListsController();
    string currentlyLoggedIn = User.Identity.Name;
}

<p>
    @Html.ActionLink("Lägg till lista", "Create", "RoomLists")
</p>


@*@{ int numberOfLists = 0;}
@foreach (RoomList list in roomListsController.GetRoomListsFromCreator (currentlyLoggedIn))
{
    numberOfLists = numberOfLists + 1;
}*@
<!--<h3>Mina listor--> @*(@numberOfLists.ToString()*@@*)*@<!--</h3>-->
@foreach (RoomList list in roomListsController.GetRoomListsFromCreator(currentlyLoggedIn))
{

    var listIdString = list.id.ToString();
    <div class="formalBlogPost" id=@listIdString>

        <div class="formalBlogPostContent">
 
            <h3>@Html.DisplayFor(modelItem => list.listName)</h3>
            <h6>@Html.DisplayFor(modelItem => list.PlantContent)</h6>
            <br />
        </div>
        <div class="blogButtons">

            @if (list.ListCreator.Equals(User.Identity.Name))
            {

                <p>
                    @Html.ActionLink("Visa lista", "Details", "RoomLists", new { id = list.id }, null) | @Html.ActionLink("Redigera", "Edit", "RoomLists", new { id = list.id }, null) | @Html.ActionLink("Ta bort", "Delete", "RoomLists", new { id = list.id }, null)
                    @*<span class="authorTime">
                        @Html.DisplayFor(modelBlogPost => list.ListCreator)
                    </span>*@
                </p>
            }
            else
            {
                <p>
                    @Html.ActionLink("Se inlägg", "Details", new { id = list.id })
                </p>
            }

        </div>
    </div>

}






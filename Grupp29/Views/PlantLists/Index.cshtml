@model IEnumerable<Grupp29.Models.PlantList>

@{
    ViewBag.Title = "Index";
}
@using Grupp29.Controllers

@if (Request.IsAuthenticated)
{

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" })
</p>

    var Model1 = Model.OrderByDescending(c => c.PlantId);
    PlantListsController controller = new PlantListsController();

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlantImg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WaterNeed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th></th>
    </tr>

    @foreach (var ListOfPlants in Model1)
    {
        <tr>
            <td>
                @if (ListOfPlants.PlantImg != null)
                {
                    <div style="width=100%; height=100%;">
                        <img src="~/Image/@ListOfPlants.PlantImg" style="border: solid white 40px;" width="40%" height="40%">
                    </div>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => ListOfPlants.PlantName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ListOfPlants.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ListOfPlants.WaterNeed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ListOfPlants.Location)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = ListOfPlants.PlantId }) |
                @Html.ActionLink("Details", "Details", new { id = ListOfPlants.PlantId }) |
                @Html.ActionLink("Delete", "Delete", new { id = ListOfPlants.PlantId })
            </td>
        </tr>
    }

</table>
}
else
{
    <h2>
        Du måste logga in för att komma åt denna sida!
    </h2>
}

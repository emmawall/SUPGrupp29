        {
            <a href="~/FormalBlogPostUploads/@ForumPost.FileName" download>@ForumPost.FileName</a>
        }
        @if (ForumPost.Creator.Equals(User.Identity.Name))
        {

            <p>
                @Html.ActionLink("Kommentera inlägg", "Details", new { id = ForumPost.Id }) | @Html.ActionLink("Redigera", "Edit", new { id = ForumPost.Id }) | @Html.ActionLink("Ta bort", "Delete", new { id = ForumPost.Id })

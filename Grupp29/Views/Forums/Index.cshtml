        else
        {
            <p>
                @Html.ActionLink("Se inlägg", "Details", new { id = ForumPost.Id })
            </p>
        }
        @{
                ForumPostCommentsController commentsController = new ForumPostCommentsController();
            }
        @foreach (var comment in commentsController.GetComments(ForumPost.Id))
        {
            var commentTime = ForumsController.GetDateFromDateTime(comment.DateTime);

            <div class="formalBlogPostComment">


                <p>@comment.CommentText</p>
                <p class="formalBlogPostCommentAuthor">@comment.Author | @commentTime</p>
            </div>

        }

    </div>


    

</div>
